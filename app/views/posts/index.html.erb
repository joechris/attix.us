<h1>Listing posts</h1>

<%= link_to 'New Post', new_post_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Node</th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.title, post %>  (<%= post.comments_count %>条回复)</td>
    <td><%= post.user.email %></td>
    <td><%= render_node_title(post.node_id) %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

