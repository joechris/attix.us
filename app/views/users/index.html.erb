
<div class="box">
  <h2>本站共有<%= @total_users_count %>名注册用户</h2>
  </br>
 <p>
    <%= form_tag users_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "搜索用户", :name => "" %>
    <% end %>
  </p>


    <% @hot_users.each do |user| %>
      <div class="topic">
        <div class="avatar">
          <%= user_avatar_tag(user, :normal) %>
        </div>
        <div class="right_info">
          <%= link_to user.name, user_path(user) %>
          <%= user.email %>
        </div>
        <% if current_user.admin? %>
          | <%= link_to "delete", user, :method => :delete, :confirm => "Sure?" %>
        <% end %>
      </div>
      <div class="clearfix"></div>
    <% end %>

  <%= custom_will_paginate @hot_users %>
</div>
